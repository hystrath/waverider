FoamFile
{
    version     2.2;
    format      ascii;
    class       dictionary;
    location    "system";
    object      collapseDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

collapseEdgesCoeffs
{
    // Edges shorter than this absolute value will be merged
    minimumEdgeLength   1e-8;

    // Maximum angle between 2 edges sharing a point attached to no other edges
    maximumMergeAngle   179;
}
